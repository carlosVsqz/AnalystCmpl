<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.escod.compiler.controllers.FXMLController">
    <children>
        <BorderPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="300" prefWidth="500.0">
            <top>
                <Label fx:id="lblHead" text="%app_name">
                    <padding>
                        <Insets left="80.0" top="30.0" />
                    </padding>
                </Label>
            </top>
            <center>
                <VBox alignment="TOP_RIGHT" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label fx:id="lblInfo" text="%text_info" />
                                <TextArea fx:id="txtA" onKeyPressed="#actionKeyPressed" prefHeight="169.0" prefWidth="170.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="80.0">
                            <children>
                                <Button fx:id="btnAction" mnemonicParsing="false" text="%text_button" />
                            </children>
                            <VBox.margin>
                                <Insets left="30.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets left="80.0" top="60.0" />
                    </padding>
                </VBox>
            </center>
         <bottom>
                    <Label fx:id="lblResult" BorderPane.alignment="CENTER">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </bottom>
        </BorderPane>
    </children>
</AnchorPane>
